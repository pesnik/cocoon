{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Cocoon",
  "version": "2.0.0",
  "identifier": "com.cocoon.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "decorations": false,
        "skipTaskbar": true,
        "alwaysOnTop": true,
        "focus": false,
        "resizable": false,
        "fullscreen": false,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
